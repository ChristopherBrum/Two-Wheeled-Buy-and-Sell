<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TwoWheeledBS</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    
    <link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="bg-gray-300">
    
    <div class="">
      <% if user_signed_in? %>
        
        <div>
          <strong><%= current_user.username %></strong>
          <p class="font-serif"><%= link_to "Home", "/posts" %> |
          <%= link_to "New Post", "/posts/new", :class => 'navbar-link' %> |
          <%= link_to 'Edit Profile', edit_user_registration_path, :class => 'navbar-link' %> |
          <%= link_to 'Inbox', "/chats", :class => 'navbar-link' %> |
          <%= link_to "Logout", destroy_user_session_path, method: :delete, :class => 'navbar-link' %></p>
        </div>

        <% else %>
          <!--
          <%= image_tag('moto-image.jpg', class: 'home-image', style: "height: auto; width: 100%") %>
          -->
        <% end %>

      <%= yield %>
    </div>

  </body>
</html>
