<div class="container">
    <div>
        <h1 class="posts-title"><%= @post.title %></h1>
        <h3 class="posts-text">Price posted: $<%= @post.price %></h3>
        <h3 class="posts-text">Seller: <%= link_to @post.user.username, "/users/#{@post.user.id}", class: "post-texts" %>     <%= image_tag @post.user.avatar, class: "avatar" %></h3>
        <h3 class="posts-text">Item location: <%= @post.user.location %></h3><br>
        <h3 class="posts-text">Send <%= link_to "#{@post.user.username}", chats_path(sender_id: current_user.id, recipient_id: @post.user.id), method: :post %> a message.</h3><br>
        <p class="text"><strong>Item description: </strong><%= @post.description %></p>
        <div class="post-id">
            <%= image_tag @post.image, class: "post-img" %>
        </div>
        <div class="post-buttons">
            <% if current_user == @post.user %>
                <div class="post-delete">
                    <%= button_to "Delete", @post, method: :delete %>
                </div>
                <div class="post-edit">
                    <%= link_to "Edit", "/posts/#{@post.id}/edit?" %>
                </div>
            <% end %>
        </div>
    </div>
</div>

    
