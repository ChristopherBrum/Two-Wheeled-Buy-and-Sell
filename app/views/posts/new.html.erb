<div class="edit-form">
  <%= form_with model: @post do |f| %>
    <p>
      <%= f.label :price %>
      <%= f.number_field(:price, required: true) %>
    </p>
  
    <p>
      <%= f.label :title %>
      <%= f.text_field :title, required: true %>
    </p>

    <p>
      <%= f.label :description %>
      <%= f.text_area :description, required: true %>
    </p>

    <p>
      <%= f.label :image %>
      <%= f.file_field :image %>
    </p>
    
    <p>
      <%= f.submit %>
    </p>
  <% end %>
</div>