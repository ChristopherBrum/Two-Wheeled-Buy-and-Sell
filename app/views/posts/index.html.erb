<h1 class="posts-title">Recent Posts</h1><br>

<div class="container">
    <% @posts.reverse.each do |post| %>
        <div class="card">
            <div class="card-img-top"><%= link_to(image_tag(post.image, class: "card-img"), post) %></div>
            <div class="card-body">
                <h3><%= link_to post.title, "/posts/#{post.id}", class: "card-title" %></h3>
                <p class="card-text">$<%= post.price %></p>
                <div class="user-info">
                    <div class="card-img"><%= link_to(image_tag(post.user.avatar, class: "avatar"), "/users/#{post.user.id}") %></div>
                    <p><%= link_to post.user.username, post.user, class: "card-username" %></p>
                </div>
            </div>
        </div>
    <% end %>   
</div>
