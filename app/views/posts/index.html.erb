<h1>Posts Page</h1>

<div class="card" >
    <% @posts.each do |post| %>
        <a href="<%= "/posts/#{post.id}" %>">
        <div class="card-body" >
            <h3 class="card-title"><%= post.title %></h3>
            <div class="card-subtitle">$<%= post.price %></div>
            <div class="card-subtitle"><%= post.user.username %></div>
            <div><%= image_tag post.image, class: "card-img" %></div>
        </div>
        </a>
    <% end %>
</div>
