<br><h1>Two-Wheeled B/S Users</h1><br><br>

<% @users.each do |user| %>
    <div>Username: <%= link_to user.username, "/users/#{user.id}" %></div>
    <div>Location: <%= user.location %></div>
    <div>Quote: <%= user.user_quote %></div>
    <div>Description: <%= user.user_description %></div>
    <div>Number of Posts:<%= user.posts.length %></div><br><br><br>
<% end %>